<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.spring.myapp.BoardMapper">
	<insert id="insert" parameterType="Board">
		
		<selectKey keyProperty="bnum" resultType="int" order="BEFORE">
			SELECT get_seq('ID_SEQ')
		</selectKey>
	
		INSERT INTO board(bnum,email,subject,content,ip)
		VALUES (#{bnum},#{email}, #{subject}, #{content}, #{ip})
	</insert>
	<update id="update">
		UPDATE board
		SET email =#{email},
			subject = #{subject},
			content =#{content},
			ip = #{ip}
		WHERE bnum = #{bnum}
	</update>
	
	<!-- 삭제시 삭제여부를 y로 변경 -->
	<update id="updateRemoveyn">
		UPDATE board
		SET removeyn = 'y'
		WHERE bnum = #{bnum}
	</update>
	
	<delete id="delete">
		DELETE FROM board
		WHERE bnum = #{bnum}
	</delete>
	
	
	<select id="selectOne" resultType="Board">
		SELECT  * FROM board
		WHERE bnum = #{bnum}
	</select>
	<select id="selectList" resultType="Board">
		select * from board
		where removeyn = 'n'
			<include refid="find"/>
		order by bnum desc
	</select>
	
	<!-- 전체게시물수 구하기 -->
	<select id="selectTotalCnt" resultType="int">
		SELECT COUNT(*) totalCnt FROM board
		WHERE removeyn = 'n'
	    <include refid="find"/>
	</select>
	
	<!-- 조회조건 sql문 -->
	<sql id="find">
		<if test="findkey =='email'">
			AND email LIKE '%' || #{findvalue} || '%'
		</if>
		<if test="findkey =='subject'">
			AND subject LIKE '%' || #{findvalue} || '%'
		</if>
		<if test="findkey =='content'">
			AND content LIKE '%' || #{findvalue} || '%'
		</if>		
		<if test="findkey=='subcon'">
			AND (subject LIKE '%' || #{findvalue} ||'%'
			   OR content LIKE '%' || #{findvalue} ||'%')
		</if>	
	
	</sql>
	
	
	<!-- 조회수 + 1 -->
	<update id="updateReadCnt">
		UPDATE board
		SET readcnt = readcnt +1
		WHERE bnum = #{bnum}
	</update>
	
	<!-- 좋아요 + 1 -->
	<update id="updateLikeCnt">
		UPDATE board
		SET likecnt = likecnt +1
		WHERE bnum = #{bnum}
	</update>
	
	<!-- 싫어요 + 1 -->
	<update id="updateDisLikeCnt">
		UPDATE board
		SET dislikecnt = dislikecnt +1
		WHERE bnum = #{bnum}
	
	</update>
	
	
	
	
	
	
</mapper>  