<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="org.company.myapp.MemberMapper">
	<insert id="insert">
		insert into member(email,passwd,username,zipcode,addrload,addrdetail,filename)
		values(#{email}, #{passwd}, #{username}, #{zipcode}, #{addrload}, #{addrdetail}, #{filename})
	</insert>
	
	<update id="update">
		update member
		set 
			passwd = #{passwd},
			username = #{username},
			zipcode = #{zipcode},
			addrload = #{addrload},
			addrdetail = #{addrdetail},
			filename = #{filename},
			modidate = now()
		where email = #{email}
	</update>
	
	<delete id="delete">
		delete from member
		where email = #{email}
	</delete>	
	
	<select id="selectOne" resultType="Member">
		select *  from member
		where email = #{email}
	</select>
	
	<select id="selectList" resultType="Member">
		select * from member
		where ${findkey} like concat('%' , #{findvalue} , '%')
	</select>
	
	<update id="update_emailauth">
		UPDATE member
		SET emailauth = 1
		WHERE email = #{email}
	</update>
	
	<!-- 네이버 간편가입 -->
	<insert id="insert_simplejoin">
		INSERT INTO member(email,username,simplejoin)
		VALUES(#{email}, #{username}, #{simplejoin})
	</insert>
	
	
	
</mapper>  